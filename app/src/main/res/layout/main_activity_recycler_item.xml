<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/normal_padding"
    android:background="@color/colorAccent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_recycler_item_imageView"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_margin="@dimen/normal_padding"
        android:scaleType="centerInside"
        android:src="@drawable/recepielogo"
        android:contentDescription="@string/main_content"
        />
    <TextView
        android:id="@+id/main_recycler_item_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="@string/app_name"
        android:layout_below="@id/main_recycler_item_imageView"/>

</RelativeLayout>