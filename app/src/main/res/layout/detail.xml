<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/normal_padding"
    android:layout_height="match_parent"
    >

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_alignParentStart="true"
        android:id="@+id/myplayer"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.google.android.exoplayer2.ui.PlayerView>
    <ImageView
        android:layout_alignParentStart="true"
        android:src="@drawable/recepielogo"
        android:contentDescription="@string/main_content"
        android:id="@+id/default_image"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <View

        android:id="@+id/space"
        android:layout_below="@id/default_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_padding"/>

    <TextView
        android:id="@+id/step_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/backbutton"
        android:padding="@dimen/normal_padding"
        android:contentDescription="@string/main_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_height="50dp" />
    <ImageButton
        android:id="@+id/forwardbutton"
        android:padding="@dimen/normal_padding"
        android:contentDescription="@string/main_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_height="50dp" />

</RelativeLayout>